{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
  },
  "include": ["**/*.ts", "./.eslintrc.cjs"],
  "exclude": ["node_modules"] 
}
