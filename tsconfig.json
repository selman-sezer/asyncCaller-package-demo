
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",     
    "moduleResolution": "NodeNext",
    "types": ["node"],     
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "./.eslintrc.cjs"],
  "exclude": ["node_modules"],
}
